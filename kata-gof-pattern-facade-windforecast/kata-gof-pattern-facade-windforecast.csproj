<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <RootNamespace>kata_gof_pattern_facade_windforecast</RootNamespace>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageId>boos-windforecast</PackageId>
    <Version>0.0.0</Version>
    <Authors>Stefan Boos</Authors>
    <Product>boos-windforecast</Product>
    <Description>Get the wind forecast for one of the next five days.

The API allows to specify a location name and the number of days in the future. It returns the wind forecast for that day in Beaufort.</Description>
    <Copyright>(c) Stefan Boos 2020.</Copyright>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageReleaseNotes>This is a pre-release for testing purpose.</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
